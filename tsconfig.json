{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "**/__mocks__/*",
    "**/__fixtures__/*"
  ]
}